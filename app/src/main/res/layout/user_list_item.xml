<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/user_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/user_card_view_minHeight"
    app:contentPadding="@dimen/user_card_view_padding"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_margin="@dimen/user_card_view_margin"
    android:background="@color/cardview_light_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">
        <ImageView
            android:id="@+id/profilePhoto"
            android:padding="@dimen/user_card_view_imageview_padding"
            android:layout_width="@dimen/user_card_view_imageview_width"
            android:layout_height="@dimen/user_card_view_imageview_height" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/profilePhoto"
            android:layout_toRightOf="@id/profilePhoto"
            android:textSize="@dimen/user_card_view_name_size"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/user_delete"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
